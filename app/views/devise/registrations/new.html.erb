<center><h2 style="margin-top: 24px;"><b>KNOW IT ALL</b></h2></center>

<div class="container">
  <br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <center>
      <div class="container">
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: false,
                      autocomplete: false,
                      input_html: { class: "styling-input" },
                      wrapper_html: { class: "styling" } %>
          <%= f.input :password,
                      required: false,
                      # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      wrapper_html: { class: "styling" },
                      input_html: { class: "styling-input" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      wrapper_html: { class: "styling" },
                      input_html: { class: "styling-input" } %>
        </div>
        <div class="form-actions" style="margin-top:50px;">
          <%= f.button :submit, "Sign Up", class: "button" %>
        </div>
      </div>
    </center>
  <% end %>
</div>


