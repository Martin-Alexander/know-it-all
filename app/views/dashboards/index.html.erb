<div class="svg-line">
  <svg class="svg" width="100" height="1" viewBox="0 0 80 1" fill="none" xmlns="http://www.w3.org/2000/svg">
  <line y1="0.5" x2="100" y2="0.5" stroke="#F3DD11"/>
  </svg>
  <h3 class="title">articles</h3>
</div>

<br>
  <% @filtered_articles_hash.each do |topic, articles| %>
    <% unless articles.empty? %>
      <div class="headuh ml-2">
        <p><%= topic %></p>
      </div>
      <br>
      <div class="cards">
      <% articles.first(4).each do |article| %>
        <% article.image_url %>
          <div class="card">
            <div class="article_image">
              <%= image_tag(article&.image_url) %>
            </div>
            <div class="overlay"></div>
            <div class="read-time">
            <p>
              <% if article.read_mins < 1  %>
                < 1 min
              <% else %>
                <%= article.read_mins  %> mins
              <% end %>
            </p>
          </div>
          <div class="headline">
              <%= link_to "#{article.title}", article_show_path(article)%>
          </div>
        </div>
      <%end%>
     </div>
          <br>
          <br>
    <%end%>
  <%end%>
<%= render 'shared/navbar' %>
