<div class="svg-line-likes">
  <svg class="svg-likes" width="100" height="1" viewBox="0 0 80 1" fill="none" xmlns="http://www.w3.org/2000/svg">
  <line y1="0.5" x2="100" y2="0.5" stroke="#F3DD11"/>
  </svg>
  <h3 class="title">favorites</h3>
</div>
<div class="cards" style="margin-top: 30px;">
  <% @likes.each do |like| %>
    <div class="card">
      <div class="article_image">
        <%= image_tag(like.article.image_url) %>
      </div>
      <div class="overlay"></div>
      <div class="read-time">
        <p><%= like.article.read_mins  %>mins</p>
      </div>
      <div class="headline">
        <% if like.article.title.length > 2 %>
          <%= link_to truncate("#{like.article.title}", length: 50), article_show_path(like.article)%>
        <% else %>
          <%= like.article.title %>
        <% end %>
      </div>
    </div>
  <%end%>
</div>
<%= render 'shared/navbar' %>
