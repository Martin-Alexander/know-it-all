     <% article.image_url %>
        <div class="card" data-target="articles.content"
             data-articletopic="<%= article.tags.first.topic.name %>">
          <div class="article_image">
            <%= image_tag(article.image_url) %>
          </div>
          <div class="overlay"></div>
          <div class="read-time">
            <p> <% if article.read_mins < 1  %>
                < 1m</i>
              <% else %>
                <%= article.read_mins  %> <i class="font-size: 15">m</i>
              <% end %>
            </p>
          </div>
          <div class="headline">
        <% if article.title.length > 2 %>
          <%= link_to truncate("#{article.title}", length: 50), article_show_path(article)%>

        <% else %>
          <%= article.title %>
        <% end %>
      </div>
    </div>
